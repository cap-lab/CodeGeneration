<?xml version="1.0" encoding="utf-8"?>
<CIC_Algorithm
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:xsd="http://www.w3.org/2001/XMLSchema"
	xmlns="http://peace.snu.ac.kr/CICXMLSchema">
	<tasks>
		<task name="sender">
			<subtask name="task" file="sender.cic">
				<port name="port0" direction="output" rate="1" sampleSize="4" />
			</subtask>
		</task>
		<task name="relay">
			<subtask name="task" file="relay.cic">
				<port name="port0" direction="input" rate="1" sampleSize="4" />
				<port name="port1" direction="output" rate="1" sampleSize="4" />
			</subtask>
		</task>
	    <task name="recv">
			<subtask name="task" file="recv.cic">
				<port name="port1" direction="input" rate="1" sampleSize="4" />
			</subtask>
		</task>
	</tasks>
	<channels>
		<channel type="fifo" size="9">
			<src task="sender" subtask="task" port="port0"/>
			<dst task="relay" subtask="task" port="port0"/>
		</channel>
		<channel type="fifo" size="11">
			<src task="relay" subtask="task" port="port1"/>
			<dst task="recv" subtask="task" port="port1"/>
		</channel>
	</channels>
	<modes>
		<mode name="mode0">
			<task name="sender" priority="1">
				<period value="1" metric="s"/>
				<deadline value="1" metric="s"/>
			</task>
			<task name="relay" priority="1">
				<period value="2" metric="s"/>
				<deadline value="1" metric="s"/>
			</task>
			<task name="recv" priority="1">
				<period value="4" metric="s"/>
				<deadline value="1" metric="s"/>
			</task>
		</mode>
	</modes>
</CIC_Algorithm>
	